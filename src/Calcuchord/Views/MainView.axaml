<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="360"
             d:DesignHeight="720"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:dialogHostAvalonia="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:local="clr-namespace:Calcuchord"
             xmlns:common="clr-namespace:MonkeyPaste.Common.Avalonia;assembly=MonkeyPaste.Common.Avalonia"
             x:DataType="local:MainViewModel"
             x:Class="Calcuchord.MainView">
    <Design.DataContext>
        <local:MainViewModel />
    </Design.DataContext>
    <Grid x:Name="MainOuterContainer">
        <dialogHostAvalonia:DialogHost Identifier="MainDialogHost">
            <controls:SnackbarHost HostName="Root">
                <controls:NavigationDrawer x:Name="LeftDrawer"
                                           Classes="permanent"
                                           LeftDrawerOpened="{Binding ElementName=NavDrawerSwitch, Path=IsChecked, Mode=TwoWay}"
                                           RightDrawerOpened="{Binding ElementName=OptionDrawerSwitch, Path=IsChecked, Mode=TwoWay}">
                    <controls:NavigationDrawer.LeftDrawerContent>
                        <local:LeftDrawerView />
                    </controls:NavigationDrawer.LeftDrawerContent>
                    <controls:NavigationDrawer.RightDrawerContent>
                        <local:RightDrawerView />
                    </controls:NavigationDrawer.RightDrawerContent>
                    <DockPanel LastChildFill="true">
                        <!-- HEADER MENU -->
                        <controls:ColorZone Name="PART_AppBarContainer"
                                            VerticalAlignment="Top"
                                            HorizontalAlignment="Stretch"
                                            DockPanel.Dock="Top"
                                            Height="56"
                                            Mode="PrimaryMid"
                                            ZIndex="1">
                            <DockPanel Margin="16">
                                <ToggleButton x:Name="NavDrawerSwitch"
                                              DockPanel.Dock="Left"
                                              Classes="float">
                                    <avalonia:MaterialIcon Kind="Menu" />
                                </ToggleButton>

                                <ToggleButton x:Name="OptionDrawerSwitch"
                                              DockPanel.Dock="Right"
                                              Classes="float">
                                    <avalonia:MaterialIcon Kind="DotsVertical" />
                                </ToggleButton>

                                <TextBlock Classes="Headline6"
                                           Text="Calcuchord"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center" />
                            </DockPanel>
                        </controls:ColorZone>
                        <Grid x:Name="MainContainerGrid"
                              RowDefinitions="Auto,*">
                            <Image Grid.RowSpan="2"
                                   Source="/Assets/Images/parchment.jpg"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   Opacity="0.5"
                                   Stretch="None" />
                            <local:InstrumentView Grid.Row="0"
                                                  DataContext="{Binding SelectedInstrument}" />
                        </Grid>
                    </DockPanel>
                </controls:NavigationDrawer>
            </controls:SnackbarHost>
        </dialogHostAvalonia:DialogHost>
        <Border x:Name="MainContainerBusyOverlay"
                IsHitTestVisible="False"
                IsVisible="{Binding IsBusy}">
            <Border.Background>
                <SolidColorBrush Color="Black"
                                 Opacity="0.5" />
            </Border.Background>
            <controls:Card CornerRadius="24"
                           Padding="4"
                           Margin="4"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center">
                <ProgressBar Classes="circular"
                             IsIndeterminate="True" />
            </controls:Card>
        </Border>

    </Grid>
</UserControl>