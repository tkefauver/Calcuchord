<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             xmlns:dlg="clr-namespace:DialogHostAvalonia;assembly=DialogHost.Avalonia"
             xmlns:local="clr-namespace:Calcuchord"
             xmlns:common="clr-namespace:MonkeyPaste.Common.Avalonia;assembly=MonkeyPaste.Common.Avalonia"
             x:DataType="local:MainViewModel"
             x:Class="Calcuchord.MatchesView">
    <UserControl.Styles>
        <Style Selector="TextBlock.empty-label">
            <Setter Property="FontSize"
                    Value="34" />
            <Setter Property="HorizontalAlignment"
                    Value="Stretch" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
            <Setter Property="MaxWidth"
                    Value="300" />
            <Setter Property="MinWidth"
                    Value="150" />
            <Setter Property="TextAlignment"
                    Value="Center" />
        </Style>

        <Style Selector="ContentControl#EmptyTextCntrContentControl">
            <Setter Property="Content">
                <Setter.Value>
                    <Template>
                        <TextBlock Classes="empty-label">
                            <TextBlock.Inlines>
                                <Run Text="Nothing." />
                            </TextBlock.Inlines>
                        </TextBlock>
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="ContentControl#EmptyTextCntrContentControl.no-inst">
            <Setter Property="Content">
                <Setter.Value>
                    <Template>
                        <TextBlock Classes="empty-label">
                            <TextBlock.Inlines>
                                <Run Text="Add an" />
                                <Run Text="instrument."
                                     Classes="subject2" />
                            </TextBlock.Inlines>
                        </TextBlock>
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="ContentControl#EmptyTextCntrContentControl.no-tuning:not(.no-inst)">
            <Setter Property="Content">
                <Setter.Value>
                    <Template>
                        <TextBlock Classes="empty-label">
                            <TextBlock.Inlines>
                                <Run Text="Add a" />
                                <Run Text="tuning."
                                     Classes="subject2" />
                            </TextBlock.Inlines>
                        </TextBlock>
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="ContentControl#EmptyTextCntrContentControl.search-mode">
            <Setter Property="Content">
                <Setter.Value>
                    <Template>
                        <TextBlock Classes="empty-label">
                            <TextBlock.Inlines>
                                <Run Text="Select" />
                                <Run Text="frets."
                                     Classes="subject2" />
                            </TextBlock.Inlines>
                        </TextBlock>
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="ContentControl#EmptyTextCntrContentControl.search-mode.piano">
            <Setter Property="Content">
                <Setter.Value>
                    <Template>
                        <TextBlock Classes="empty-label">
                            <TextBlock.Inlines>
                                <Run Text="Select" />
                                <Run Text="keys."
                                     Classes="subject2" />
                            </TextBlock.Inlines>
                        </TextBlock>
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="ContentControl#EmptyTextCntrContentControl.bookmark-mode">
            <Setter Property="Content">
                <Setter.Value>
                    <Template>
                        <TextBlock Classes="empty-label">
                            <TextBlock.Inlines>
                                <Run Text="No" />
                                <Run Text="{Binding PatternSingularName}"
                                     Classes="article2" />
                                <Run Text="bookmarks"
                                     Classes="subject2" />
                                <Run FontStyle="Italic"
                                     Text="yet." />
                            </TextBlock.Inlines>
                        </TextBlock>
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>

        <Style Selector="ContentControl#EmptyTextCntrContentControl.index-mode">
            <Setter Property="Content">
                <Setter.Value>
                    <Template>
                        <TextBlock Classes="empty-label">
                            <TextBlock.Inlines>
                                <Run Text="No" />
                                <Run Text="{Binding PatternSingularName}"
                                     Classes="article2" />
                                <Run Text="results"
                                     Classes="subject2" />
                                <Run Text="found." />
                            </TextBlock.Inlines>
                        </TextBlock>
                    </Template>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Styles>
    <Grid>
        <!-- RESULTS CNTR -->

        <Border x:Name="ResultContainer"
                CornerRadius="5">
            <Border.Background>
                <SolidColorBrush Color="{DynamicResource BgColor}"
                                 Opacity="0.3" />
            </Border.Background>
            <Border.IsVisible>
                <MultiBinding Converter="{x:Static BoolConverters.And}">
                    <Binding Path="!IsSearchButtonVisible" />
                    <Binding Path="!IsVisible"
                             ElementName="EmptyTextCntrContentControl" />
                </MultiBinding>

            </Border.IsVisible>

            <Grid RowDefinitions="Auto,*">
                <!-- SHARE -->
                <controls:Card Grid.Row="0"
                               IsVisible="False"
                               Classes="button-group"
                               Margin="10"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center">
                    <Button x:Name="ShareButton"
                            Classes="float"
                            Command="{Binding ConvertMatchesCommand}">
                        <avalonia:MaterialIcon Kind="Share" />
                    </Button>
                </controls:Card>

                <!-- ZOOM BTNS -->
                <controls:Card Grid.Row="0"
                               Classes="button-group"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Margin="10">
                    <StackPanel Orientation="Horizontal">
                        <!-- ZOOM OUT (COLS+1) -->
                        <Button x:Name="ZoomMinusButton"
                                Classes="float"
                                Command="{Binding IncreaseMatchColumnsCommand}">
                            <avalonia:MaterialIcon Kind="Minus" />
                        </Button>
                        <!-- ZOOM IN (COLS-1) -->
                        <Button x:Name="ZoomPlusButton"
                                Classes="float"
                                Command="{Binding DecreaseMatchColumnsCommand}">
                            <avalonia:MaterialIcon Kind="Plus" />
                        </Button>
                    </StackPanel>
                </controls:Card>

                <ScrollViewer x:Name="MatchGalleryScrollViewer"
                              Grid.Row="1">
                    <!-- NOTE no margin/padding on repeater to get accurate bounds -->
                    <ItemsRepeater x:Name="MatchItemsRepeater"
                                   ItemsSource="{Binding Matches}">
                        <ItemsRepeater.RenderTransform>
                            <TranslateTransform />
                        </ItemsRepeater.RenderTransform>
                        <ItemsRepeater.Layout>
                            <WrapLayout Orientation="Horizontal" />
                        </ItemsRepeater.Layout>
                        <ItemsRepeater.ItemTemplate>
                            <DataTemplate x:DataType="local:MatchViewModelBase">
                                <local:MatchView Background="{DynamicResource HttTransparent}"
                                                 Width="{Binding MatchWidth, Source={x:Static local:MainViewModel.Instance}}" />
                            </DataTemplate>
                        </ItemsRepeater.ItemTemplate>
                    </ItemsRepeater>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- SEARCH OVERLAY -->

        <StackPanel x:Name="SearchOverlay"
                    Spacing="5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <!-- SEARCH BUTTON -->

            <Button x:Name="SearchButton"
                    Classes="accent fade fade-collapse"
                    Padding="16"
                    MinWidth="64"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    IsVisible="{Binding IsSearchButtonVisible}"
                    Height="{Binding $self.Bounds.Width}"
                    Command="{Binding FindMatchesCommand}">
                <avalonia:MaterialIcon Kind="Search"
                                       MinWidth="48"
                                       Height="{Binding $self.Bounds.Width}" />
            </Button>

            <!-- EMPTY LABEL -->

            <ContentControl x:Name="EmptyTextCntrContentControl"
                            Classes.piano="{Binding IsPianoSelected}"
                            Classes.no-inst="{Binding IsInstrumentsEmpty}"
                            Classes.no-tuning="{Binding IsTuningsEmpty}"
                            Classes.search-mode="{Binding IsSearchModeSelected}"
                            Classes.bookmark-mode="{Binding IsBookmarkModeSelected}"
                            Classes.index-mode="{Binding IsIndexModeSelected}">
                <ContentControl.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                        <Binding Path="!IsSearchButtonVisible" />
                        <Binding Path="IsMatchesEmpty"
                                 TargetNullValue="False"
                                 FallbackValue="False" />
                        <Binding Path="!IsSearchInitiating" />
                    </MultiBinding>
                </ContentControl.IsVisible>

            </ContentControl>

            <!-- RESET -->
            <HyperlinkButton x:Name="ResetInstrumentLinkBUtton"
                             Classes="fade fade-collapse"
                             Cursor="Hand"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Opacity="{Binding !IsDefaultSelection, ConverterParameter=1|0, Converter={x:Static common:MpAvBoolToDoubleConverter.Instance}}"
                             Command="{Binding ResetInstrumentCommand}">
                <HyperlinkButton.IsVisible>
                    <MultiBinding Converter="{x:Static BoolConverters.Or}">
                        <Binding Path="IsVisible"
                                 ElementName="SearchButton" />
                        <Binding Path="IsVisible"
                                 ElementName="EmptyTextCntrContentControl" />
                    </MultiBinding>
                </HyperlinkButton.IsVisible>
                <TextBlock Background="Transparent"
                           Width="{Binding Bounds.Width, ElementName=SearchButton}"
                           MinHeight="20"
                           TextAlignment="Center"
                           Classes="Body1"
                           Text="Reset" />
            </HyperlinkButton>

        </StackPanel>

        <!-- BUSY OVERLAY -->

        <Border x:Name="MatchesBusyOverlay"
                Classes="busy-cntr">
            <Border.IsVisible>
                <MultiBinding Converter="{x:Static BoolConverters.Or}">
                    <Binding Path="IsSearchInitiating" />
                    <Binding Path="IsMatchZoomChanging" />
                </MultiBinding>
            </Border.IsVisible>
        </Border>

    </Grid>
</UserControl>